server {
    listen 80;
    server_name _;
    location / {
        proxy_pass http://calibre:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    location /content {
        proxy_pass http://calibre:8081;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
